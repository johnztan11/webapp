<div class="content-wrap">
    <!-- main page content. the place to put widgets in. usually consists of .row > .col-md-* > .widget.  -->
    <main id="content" class="content" role="main">
        <div class="row">
            <div class="col-md-6">
                <section class="widget">
                    <div class="widget-body">
                        <div class="widget-top-overflow text-white">
                            <div class="height-250 overflow-hidden">
                                <%= image_tag @document.cover, class: 'img-responsive center-block', style: 'max-height: 100%;' %>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-5 text-center">
                                <div class="post-user post-user-profile">
                                    <span class="thumb-xlg" style="visibility: hidden;">
                                        <img class="img-circle" src="/assets/production/demo/people/a5.jpg" alt="...">
                                    </span>
                                    <h4 class="fw-normal"> <span class="fw-semi-bold"><%= @document.title %></span></h4>
                                    <p><%= @author.full_name %></p>
                                    <a href="#" class="btn btn-danger btn-sm mt">
                                        &nbsp;Send
                                        <i class="fa fa-envelope ml-xs"></i>&nbsp;
                                    </a>
                                    <ul class="contacts">
                                        <li><i class="fa fa-phone fa-fw mr-xs"></i><a href="#"> +375 29 555-55-55</a></li>
                                        <li><i class="fa fa-envelope fa-fw mr-xs"></i><a href="#"> psmith@example.com</a></li>
                                        <li><i class="fa fa-map-marker fa-fw mr-xs"></i><a href="#"> Minsk, Belarus</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="stats-row stats-row-profile mt text-right">
                                    <div class="stat-item">
                                        <p class="value">
                                            <%= number_to_currency @document.price, precision: 0 %>
                                        </p>
                                        <h5 class="name">Posts</h5>
                                    </div>
<!--                                     <div class="stat-item">
                                        <p class="value">9.38%</p>
                                        <h5 class="name">Conversion</h5>
                                    </div>
                                    <div class="stat-item">
                                        <p class="value">842</p>
                                        <h5 class="name">Followers</h5>
                                    </div> -->
                                </div>
                                <p class="text-right mt-lg">
                                    <a href="#" class="label label-warning"> UI/UX </a>
                                    <a href="#" class="label label-danger ml-xs"> Web Design </a>
                                    <a href="#" class="label label-default ml-xs"> Mobile Apps </a>
                                </p>
                                <p class="lead mt-lg">
                                    <%= @author.description %>
                                </p>
                                <p>
                                    <%= @document.description %>
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-6">
                <section class="activities">
                    <% if !user_signed_in? %>
                        <%= render 'layouts/purchase_form' %>
                    <% elsif @author == current_user %>
                    <% elsif current_user.has_owned_document?(@document) %>
                        <h2>Download</h2>
                        <section class="event">
                            <span class="thumb-sm avatar pull-left mr-sm">
                                <%= image_tag @document.cover, class: 'img-circle' %>
                                
                            </span>
                            <h4 class="event-heading"><%= link_to @document.title, @document.doc.url, download: @document.title %> </h4>
                            <p class="fs-sm text-muted">You purchased on <%= @document.transactions.where(buyer: current_user).first.created_at.strftime("%B %d, %Y") %></p>
                           

                            <footer>
    
                            </footer>
                        </section>
                    <% else %>
                        <%= render 'layouts/purchase_form' %>
                    <% end %>
                </section>
            </div>
        </div>
    </main>
</div>
<script src="https://js.braintreegateway.com/v2/braintree.js"></script>
<script>
    $(document).ready(function(){
        braintree.setup("<%= @client_token %>", "dropin", {
          container: "dropin-container"
        });
    });

</script>