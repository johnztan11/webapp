<div class="content-wrap">
    <main id="content" class="content" role="main">
        <h1 class="page-title">Upload a File</h1>
        <div class="row">
            <div class="col-md-12">
                <section class="widget">
                    <div class="widget-body">
                        <%= form_for @document, html: {class: 'form-horizontal'}, role: 'form' do |f| %>
                            <fieldset>
                                <%= render 'layouts/error_messages', error_object: @document %>
                                 <div class="form-group">
                                    <%= f.label :title, "Title", class: 'control-label col-sm-4' %>
                                    <div class="col-sm-8">
                                        <%= f.text_field :title, class: 'form-control',  placeholder: "What's your document called?" %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= f.label :doc, "Upload Your Document", class: 'control-label col-sm-4' %>
                                    <div class="col-sm-8">
                                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                            <div class="form-control" data-trigger="fileinput">
                                                <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                                <span class="fileinput-filename"></span>
                                            </div>
                                            <span class="input-group-addon btn btn-default btn-file">
                                                <span class="fileinput-new">Select file</span>
                                                <span class="fileinput-exists">Change</span>
                                                <%= f.file_field :doc %>
                                            </span>
                                            <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= f.label :cover, "Upload A Cover", class: 'control-label col-sm-4' %>
                                    <div class="col-sm-8">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                <img data-src="holder.js/100%x100%" alt="..." src="">
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                                            <div>
                                                <span class="btn btn-default btn-file">
                                                    <span class="fileinput-new">       Select image
                                                    </span>
                                                    <span class="fileinput-exists">     Change
                                                    </span>
                                                    <%= f.file_field :cover %>
                                                </span>
                                                <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- file description -->
                                <div class="form-group">
                                    <%= f.label :description, "Description", class: 'col-sm-4 control-label' %>
                                    <div class="col-sm-8">
                                        <%= f.text_area :description, class: 'form-control', rows: 4 %>
                                    </div>
                                </div>
                                <!-- file category -->
                                <div class="form-group">
                                    <%= f.label :category, "Category", class: 'col-sm-4 control-label' %>
                                    <div class="col-sm-8">
                                        <%= f.text_area :category, class: 'form-control', rows: 1 %>
                                    </div>
                                </div>                                
                                <!--file price -->
                                <div class="form-group">
                                    <%= f.label :price, "Price", class: 'control-label col-sm-4' %>
                                    <div class="col-sm-8">
		                                <div class="input-group">
		                                    <span class="input-group-addon bg-transparent"><i class="fa fa-usd"></i></span>
                                            <%= f.number_field :price, class: 'form-control', size: 16, placeholder: 'How much do you want to sell your document for?' %>
		                                </div>
		                            </div>
                            	</div>
	                          	<div class="form-actions">
	                                <div class="row">
	                                    <div class="col-sm-offset-4 col-sm-7">
                                            <%= f.submit "Save Changes", class: 'btn btn-primary' %>
	                   
	                                        <button type="button" class="btn btn-inverse">Cancel</button>
	                                    </div>
	                                </div>
	                            </div>
                            </fieldset>
                        <% end %> <!-- end form -->
                    </div>
                </section>
            </div>
        </div>
    </main>
</div>
