<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: 'form', html: {class: 'intro-form', id: 'register_form'}) do |f| %>
          <% unless devise_error_messages!.blank? #Don't show devise errors if there are no devise errors %>
            <div class="alert alert-danger">
              <%= devise_error_messages! %>
            </div>
          <% end %>
                <h3 class="text-center"> Register for Free </h3>
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', required: 'required', placeholder: 'Email' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', required: 'required', placeholder: 'Password', html: {autocomplete: "off"} %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, class: 'form-control', required: 'required', placeholder: 'Please confirm your password.' %>
                </div>
                <div class="form-group text-center">
                  <%= f.submit "Register", class: 'btn btn-custom' %>
                </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form', html: {class: 'intro-form', id: 'login_form'}) do |f| %>

          <h3 class="text-center"> Already registered?  Sign in here:</h3>

          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', required: 'required', placeholder: 'Email' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', required: 'required', placeholder: 'Password', html: {autocomplete: "off"} %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %> Remember me
              <% end %>
            </div>
          <% end -%>
          <div class="form-group text-center">
            <%= f.submit "Sign In", class: 'btn btn-custom' %>
          </div>
        <% end %>
    </div>
  </div>
</div>
<% if @registering %>
  <script>
    $('#load_sign_up').click();
  </script>
<% end %>
